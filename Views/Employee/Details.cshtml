@model Employee
@{
    ViewData["Title"] = "Employee Details";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1>Details of @Model.FirstName</h1>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control" readonly />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MiddleName">Middle Name</label>
                <input asp-for="MiddleName" class="form-control" readonly />
                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" readonly />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" asp-action="Create" class="btn btn-success float-right" mt-2/>
                    <a class="btn btn-success float right mt-2" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-secondary mt-2 " asp-action="Index" >Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>